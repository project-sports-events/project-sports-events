<form action="/auth/signup" method="post">
   <section class="vh-100 gradient-custom">
      <div class="container py-5 h-100">
         <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
               <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                  <div class="card-body p-4 p-md-5">
                     <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Sign Up</h3>
                     <form action="/auth/signup" method="POST">
                        <div class="row">
                           <div class="col-md-6 mb-4">
                              <div class="form-outline">

                                 <label class="form-label" for="username"> Username <input type="text" id="username"
                                       class="form-control form-control-lg" name="username"></label>
                              </div>
                           </div>
                        </div>
                        <div class="row">
                           <div class="col-md-6 mb-4 d-flex align-items-center">
                              <div class="form-outline datepicker w-100">
                                 <label for="password" class="form-label"> Password <input type="password"
                                       name="password" class="form-control form-control-lg" id="Password"></label>
                              </div>
                           </div>
                        </div>
                        <div class="mt-4 pt-2">
                           <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                        </div>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </section>
</form>
{{#if errorMessage}}
{{errorMessage}}
{{/if}}