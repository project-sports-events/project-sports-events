{{!-- filter form --}}
<form action="/events/search" method="GET" style="padding-top:20px;">
    <ul class="nav justify-content-center">
        <li class="nav-item mr-2">
            <h5>Filter:</h5>
        </li>
        <li class="nav-item mr-2">
            <select name="typeOfSport">
                <option value="" disabled selected>Search for sport</option>
                <option value="football">football</option>
                <option value="basketball">basketball</option>
                <option value="tennis">tennis</option>
            </select>
        </li>
        <li class="nav-item mr-2">
            <input type="text" name="location" placeholder="location">
        </li>
        <li class="nav-item mr-2">
            <input type="number" id="event-price" name="price" min="0" placeholder="price">
        </li>
        <li class="nav-item mr-2">
            <input type="submit" value="search">
        </li>
    </ul>
</form>


{{!-- EVENT --}}
<div class="container mx-auto mt-3 events-container ">
    <div class="row events-padding">
        {{#each eventsPending}}
        <div class="col-4  mt-1">
            <div class="card" style="width: 18rem;">

                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>

                    <h6 class="card-subtitle mb-2 text-muted">Time: {{this.time}}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">Date: {{this.date}}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">Price: Â£{{this.price}}</h6>

                    <a href="#" class="btn"><i class="fab fa-github"></i> Github</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

